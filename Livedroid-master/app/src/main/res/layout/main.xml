<merge xmlns:android="http://schemas.android.com/apk/res/android">
  <SurfaceView
    android:id="@+id/camera"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />
  <TextView
    android:id="@+id/ip_address"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|top"
    android:background="@android:color/black" />
    <Button
    android:id="@+id/startBtn"
    android:layout_width="195dip"
    android:layout_gravity="center_horizontal|bottom"
    android:layout_height="55dip"
    android:text="Start"
    android:onClick="startStreaming"
        android:background="#4da5ff" />
    <Button
     android:id="@+id/stopBtn"
     android:background="#ff4d4d"
     android:layout_width="195dip"
     android:layout_gravity="center_horizontal|bottom"
     android:layout_height="55dip"
     android:text="Stop"
     android:onClick="stopStreaming"
     android:visibility="invisible"
         />
    <Button
        android:id="@+id/enablehttp"
        android:layout_width="150dip"
        android:layout_gravity="right"
        android:layout_height="55dip"
        android:text="Enable HTTP Server"
        android:onClick="enableHTTPServer"
        android:background="#4da5ff" />
    <Button
        android:id="@+id/disablehttp"
        android:layout_width="150dip"
        android:layout_gravity="right"
        android:layout_height="55dip"
        android:text="Disable HTTP Server"
        android:onClick="DisableHTTPServer"
        android:visibility="invisible"
        android:background="#ff4d4d" />
    <Button
        android:id="@+id/disableUDP"
        android:layout_width="55dip"
        android:layout_gravity="left|bottom"
        android:layout_height="55dip"
        android:text="Start UDP"
        android:onClick="UDPFinder"
        android:visibility="invisible"
        android:background="#58ACFA" />
    <Button
        android:id="@+id/settings"
        android:layout_gravity="center_horizontal"
        android:layout_width="150dip"
        android:layout_height="55dip"
        android:text="Settings"
        android:onClick="viewSettings"
        android:background="#ff9933" />
    <TextView
        android:id="@+id/fps_view"
        android:background="@android:color/black"
        android:layout_gravity="bottom|right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</merge>

